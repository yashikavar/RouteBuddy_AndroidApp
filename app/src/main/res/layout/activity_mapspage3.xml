<?xml version="1.0" encoding="UTF-8"?>

    <ScrollView android:fillViewport="true"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:background="@drawable/logo"
        xmlns:android="http://schemas.android.com/apk/res/android">



    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="match_parent"

        android:layout_width="match_parent"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">



    <TextView
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:id="@+id/textView11"
        android:text="source addresss *"
        android:textColor="#000"
        android:textSize="30dp" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:id="@+id/source_add"
        android:textColor="#000"
        android:layout_below="@+id/textView11"
        android:singleLine="true"
        android:textSize="30dp" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:id="@+id/textView10"
        android:text="destination addresss *"
        android:layout_below="@+id/source_add"
        android:layout_marginTop="30dp"
        android:textColor="#000"
        android:textSize="30dp" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:id="@+id/dest_add"
        android:textColor="#000"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView10"
        android:singleLine="true"
        android:textSize="30dp" />

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/time_g1"
        android:inputType="number"
        android:hint="hour"
        android:ems="10"
        android:layout_below="@+id/textView12"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="30dp"
        android:layout_alignRight="@+id/time_c1"
        android:layout_alignEnd="@+id/time_c1" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/textView12"
        android:text="Go Time *"
        android:textColor="#000"
        android:textSize="30dp"
        android:layout_marginTop="61dp"
        android:layout_below="@+id/pin_code"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/time_c1"
        android:layout_alignParentStart="true"
        android:hint="hour"
        android:layout_below="@+id/textView13"
        android:inputType="number"
        android:ems="10"
        android:layout_alignParentLeft="true"
        android:textSize="30dp"
        android:layout_alignRight="@+id/checkBox_fri"
        android:layout_alignEnd="@+id/checkBox_fri" />

    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/textView13"
        android:text="Comeback Time *"
        android:textColor="#000"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/time_g1"
        android:layout_marginTop="30dp"
        android:textSize="30dp" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:id="@+id/textView14"
        android:text="Pincode*"
        android:textColor="#000"
        android:layout_below="@+id/dest_add"
        android:layout_marginTop="24dp"
        android:textSize="30dp" />

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/pin_code"
        android:layout_below="@+id/textView14"
        android:inputType="number"
        android:ems="10"
        android:textSize="20dp" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/textView15"
        android:text="Enter the days of week *"
        android:textColor="#000"
        android:layout_below="@+id/time_c1"
        android:layout_marginTop="29dp"
        android:textSize="30dp" />

    <CheckBox
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/checkBox_mon"
        android:text="Monday"
        android:layout_below="@+id/textView15"
        android:layout_marginTop="25dp"
        android:checked="false"
        android:textSize="30dp" />

    <CheckBox
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/checkBox_tue"
        android:text="Tuesday"
        android:layout_below="@+id/checkBox_mon"
        android:layout_marginTop="25dp"
        android:checked="false"
        android:textSize="30dp" />

    <CheckBox
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/checkBox_wed"
        android:text="Wednesday"
        android:layout_below="@+id/checkBox_tue"
        android:layout_marginTop="25dp"
        android:checked="false"
        android:textSize="30dp" />

    <CheckBox
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/checkBox_thr"
        android:text="Thrusday"
        android:layout_below="@+id/checkBox_wed"
        android:layout_marginTop="25dp"
        android:checked="false"
        android:textSize="30dp" />

    <CheckBox
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/checkBox_fri"
        android:text="Friday"
        android:layout_below="@+id/checkBox_thr"
        android:layout_marginTop="25dp"
        android:checked="false"
        android:textSize="30dp" />

    <CheckBox
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/checkBox_sat"
        android:text="Saturday"
        android:layout_below="@+id/checkBox_fri"
        android:layout_marginTop="25dp"
        android:checked="false"
        android:textSize="30dp" />

    <CheckBox
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/checkBox_sun"
        android:text="Sunday"
        android:layout_below="@+id/checkBox_sat"
        android:layout_marginTop="25dp"
        android:checked="false"
        android:textSize="30dp" />

    <Button
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:background="#e9f4f9"
        android:id="@+id/btnadd1"
        android:text="Add Your Daily Route"
        android:layout_below="@+id/checkBox_sun"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="79dp"
        android:textSize="40dp" />

        <EditText
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/time_c2"
            android:inputType="number"
            android:ems="10"
            android:hint="min"
            android:textSize="30dp"
            android:layout_above="@+id/textView15"
            android:layout_toRightOf="@+id/checkBox_sun"
            android:layout_alignRight="@+id/textView13"
            android:layout_alignEnd="@+id/textView13" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:hint="min"
            android:id="@+id/time_g2"
            android:textSize="30dp"
            android:layout_above="@+id/textView13"
            android:layout_toRightOf="@+id/checkBox_sun"
            android:layout_alignRight="@+id/textView13"
            android:layout_alignEnd="@+id/textView13" />

    </RelativeLayout>

</ScrollView>