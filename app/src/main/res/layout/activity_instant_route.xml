<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="routebuddy.administrator.example.com.minor_project.instant_route">



        <ImageView
            android:layout_width="550dp"
            android:layout_height="1250dp"
            android:id="@+id/imageView5"
            android:src="@drawable/logo"
            android:alpha="0.6"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INSTANT ROUTE"
            android:id="@+id/textViewi"
            android:textColor="#0d0d0d"
            android:textStyle="bold"
            android:textSize="30dp"
            android:alpha="1.0"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/textViewi7"
            android:layout_alignEnd="@+id/textViewi7" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SOURCE:"
            android:id="@+id/textViewi2"
            android:textColor="#050505"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textViewi" />

        <TextView
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:text="New Text"
            android:id="@+id/textViewi5"
            android:textSize="20dp"
            android:layout_below="@+id/textViewi2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DESTINATION:"
            android:id="@+id/textViewi6"
            android:textColor="#000"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_below="@+id/textViewi5"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:text="New Text"
            android:id="@+id/textViewi7"
            android:textSize="20dp"
            android:layout_below="@+id/textViewi6"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SEARCH for Friends with SAME ROUTE"
            android:id="@+id/buttoni1"
            android:textStyle="bold"
            android:textSize="30dp"
            android:background="#e9f4f9"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CHANGE YOUR ROUTE"
            android:id="@+id/buttoni"
            android:textStyle="bold"
            android:textSize="25dp"
            android:background="#e9f4f9"
            android:layout_below="@+id/buttoni1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp" />



    </RelativeLayout>






