<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="routebuddy.administrator.example.com.minor_project.mapspage"
    android:background="#fff">

    <Button android:id="@+id/btninstantroute"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:text="INSTANT ROUTE"
        android:textSize="40dp"
        android:textColor="#1219f3"
        android:background="#cbcdf2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button android:id="@+id/btndailyroute"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:text="DAILY ROUTE"
        android:textSize="40dp"
        android:textColor="#1219f3"
        android:background="#cbcdf2"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:text="If you want to know your quick route partners within 10 minutes of time span then click on instant route"
        android:id="@+id/textView28"
        android:textSize="20dp"
        android:layout_below="@+id/btninstantroute"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="56dp"
        android:textColor="#534444"
        android:textStyle="bold|italic" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:text="If you want to know your daily route partner within 10 minutes of time span then click on instant route"
        android:id="@+id/textView29"
        android:textSize="20dp"
        android:layout_marginTop="60dp"
        android:textColor="#534444"
        android:layout_below="@+id/btndailyroute"
        android:layout_centerHorizontal="true"
        android:textStyle="bold|italic" />


</RelativeLayout>
